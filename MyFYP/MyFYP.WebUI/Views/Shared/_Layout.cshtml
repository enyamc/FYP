<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


</head>
<body>
    <style>
        
    </style>

    <div class="navbar navbar-light navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("FYP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand"} )*@
                <a href="@Url.Action("Index", "Home")" class="navbar-left">
                    <img src="/App_Start/Images/Logo.png" width="90" title="title" alt="additional title" />
                </a>
            </div>


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:green" }))</li>
                    
                    <li>@Html.ActionLink("Registration", "Index", "EmailSetup", null, new { @style = "color:green" })</li>


                    @if (Request.IsAuthenticated && User.IsInRole("Charity"))
                    {
                        <li>@Html.ActionLink("Donations", "Donations", "Home", null, new { @style = "color:green" })</li>
                    }


                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin", "Index", "Admin", null, new { @style = "color:green" }))</li>
                    }

                    @if (Request.IsAuthenticated && User.IsInRole("StoreAdmin"))
                    {
                        <li>@Html.ActionLink("Store Admin", "Index", "Store", null, new { @style = "color:green" }))</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
                @{ 
                    Html.RenderAction("BasketSummary", "Basket");
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-success">&copy; @DateTime.Now.Year - Enya's FYP</p>
        </footer>
    </div>

   
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
