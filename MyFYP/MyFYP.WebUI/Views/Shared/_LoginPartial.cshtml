@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", Style = "color:Green" }))
    {
        @Html.AntiForgeryToken()

        <style>
            div.c1 li.c2 a {
                color: green;
            }
        </style>

        <ul class="nav navbar-nav navbar-right">
            <li style="color:green">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", Style = "color:Green" })
            </li>
            <li style="color:green"><a style="color:green" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li style="color:green">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", Style = "color:Green" })</li>
        <li style="color:green">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", Style = "color:Green" })</li>
    </ul>
}
